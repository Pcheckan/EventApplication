@using EventApplication.ViewModels
@{
    ViewData["Title"] = "Event Recomended";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string[] TableHeaders = new string[]
            {
              "Name",
              "Location",
              "Time",
              "Date",
              "Status",
              "Category",
              "Attend"
            };
}

<div class = "table row justify-content-center align-align-items-center ">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @{
                        foreach(var head in TableHeaders)
                        {
                    <th>
                        @head
                    </th>
                        }
                }
            </tr>
        </thead>

        <tbody>
            @{
            if (Model != null){
                foreach (var Data in Model){
                <tr>    
                    <td>@Data.Name</td>
                    <td>@Data.Location</td>
                    <td>@Data.Time</td>
                    <td>@Data.Date</td>
                    <td>@Data.Status</td>
                    <td>@Data.Category</td>
                    <td>
                        <a asp-area="" asp-controller="Event" asp-action="ProgrammingEvent" class="btn btn-primary">Attend</a>
                    </td>
                </tr>
                }
            }



            }
        </tbody>

    </table>
</div>



